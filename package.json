    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest",
    "screenshot": "playwright test",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "changeset": "changeset",
    "version:changeset": "changeset version",
    "publish:changeset": "changeset publish --access public"
  },
  "sideEffects": [
    "*.css",
    "*.css*",
    "*.scss"
